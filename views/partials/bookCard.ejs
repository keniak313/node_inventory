<div>
  <p>Title: <%= book.title %></p>
  <p>Author: <%= book.firstname %> <%= book.lastname %></p>
  <p>Year: <%= book.year %></p>
  <p>Pages: <%= book.pages %></p>
  <div class="itemTags">
    <% if(book.array_agg){ %>
    <p>Tags: </p>
    <% book.array_agg.forEach((cat) =>{ %>
    <a href="/tag/<%=cat%>"><%=cat%></a>
    <%})%>
    <% } %>
  </div>


  <a href="/editBook/<%= book.id %>"><button>Edit</button></a>
  <a href="/removeBook/<%= book.id%>" onclick="return confirm(`Are you sure you want to delete <%=book.title %>?`);"><button>Remove</button></a>
</div>